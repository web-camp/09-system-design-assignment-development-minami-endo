<h1>Public::Customers#edit</h1>
<p>Find me in app/views/public/customers/edit.html.erb</p>

<h1>登録情報編集</h1>
<%= form_for(@customer, url: public_customer_path(@customer), method: :patch) do |f| %>
<span>名前</span>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %><br>
<span>フリガナ</span>
  <%= f.text_field :first_name_katakana %>
  <%= f.text_field :last_name_katakana %><br>
<span>メールアドレス</span>
  <%= f.text_field :email %><br>
<span>郵便番号（ハイフンなし）</span>
  <%= f.text_field :postal_code %><br>
<span>住所</span>
  <%= f.text_field :address %><br>
<span>電話番号（ハイフンなし）</span>
  <%= f.text_field :phone_number %><br>
<%= f.submit "編集内容を保存する", class:"btn btn-primary" %>
<% end %>