<h1>Public::Customers#show</h1>
<p>Find me in app/views/public/customers/show.html.erb</p>

<h1>マイページ</h1>
<font size="5">登録情報</font>
<%= link_to "編集する", edit_public_customer_path(@customer), class:"btn btn-primary" %>
<%= link_to "パスワードを変更する", edit_customer_password_path(@customer), class:"btn btn-primary" %>

<table>
		<tr>
			<th>氏名</th>
			<td><%= @customer.first_name %><%= @customer.last_name %></td>
		</tr>
		<tr>
			<th>カナ</th>
			<td><%= @customer.first_name_katakana %><%= @customer.last_name_katakana %></td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td><%= @customer.postal_code %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= @customer.address %></td>
		</tr>
		<tr>
			<th>電話番号</th>
			<td><%= @customer.phone_number %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @customer.email %></td>
		</tr>
</table>

<h4>配送先</h4>
<%= link_to "一覧を見る", public_shipping_addresses_path, class:"btn btn-primary" %>

<h4>注文履歴</h4>
<%= link_to "一覧を見る", public_orders_path, class:"btn btn-primary" %>
