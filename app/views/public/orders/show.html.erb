<h1>Public::Orders#show</h1>
<p>Find me in app/views/public/orders/show.html.erb</p>

<font size="5" class="p-3 mb-2 bg-warning text-dark ">注文履歴詳細</font>
<span>注文情報</span>
<table>
	<tr>
		<th>注文日</th>
		<td><%= order.created_at %></td>
	</tr>
	<tr>
		<th>配送先</th>
		<td><%= order.postal_code %></td>
		<td><%= order.address %></td>
		<td><%= order.name %></td>
	</tr>
	<tr>
		<th>支払方法</th>
		<td><%= order.method_of_payment %></td>
	</tr>
	<tr>
		<th>ステータス</th>
		<td><%= ステータス %></td>
	</tr>
</table>

<span>請求情報</span>
<table>
	<tr>
		<th>商品合計</th>
		<td><%= order.billing_amount %></td>
	</tr>
	<tr>
		<th>配送料</th>
		<td><%= POSTAGE %></td>
	</tr>
	<tr>
		<th>ご請求額</th>
		<td><%= order.billing_amount.to_i + POSTAGE %></td>
	</tr>
</table>

<span>注文内容</span>
<table>
	<thead>
		<tr>
			<th>商品</th>
			<th>単価（税込）</th>
			<th>個数</th>
			<th>小計</th>
		</tr>
	</thead>
	<tbody>
		<% cart_products.each do |cart_product| %>
		<tr>
			<td><%= cart_product.product.name %></td>
			<td><%= number_to_currency(cart_product.product.non_taxed_price.to_i * 1.1, unit: "￥", strip_insignificant_zeros: true) %></td>
			<td><%= cart_product.count %></td>
			<td><%= number_to_currency(cart_product.product.non_taxed_price.to_i * 1.1 * cart_product.count, unit: "￥", strip_insignificant_zeros: true) %></td>
		</tr>
		<% end %>
	</tbody>
</table>




