<h1>Public::Orders#index</h1>
<p>Find me in app/views/public/orders/index.html.erb</p>

<font size="5" class="p-3 mb-2 bg-warning text-dark ">注文履歴一覧</font>

  <table>
  	<thead>
  		<tr>
  			<th>注文日</th>
  			<th>配送先</th>
  			<th>注文商品</th>
  			<th>支払金額</th>
  			<th>ステータス</th>
  			<th>注文詳細</th>
  		</tr>
  	</thead>
  	<tbody>
  		<% @orders.each do |order| %>
  		<tr>
  			<td><%= order.created_at %></td>
  			<td><%= order.postal_code %>
  				<%= order.address %>
  				<%= order.name %>
  			</td>
  			<td>
  				<% order.order_products.each do |order_product| %>
  				  <%= order_product.product.name %>
  				<% end %>
  			</td>
  			<td><%= order.billing_amount.to_i + 800 %></td>
  			<td><%= order.order_status_i18n %></td>
  			<td><%= link_to "表示する", public_order_path(order), class:"btn btn-primary" %></td>
  		</tr>
  		<% end %>
  	</tbody>
  </table>