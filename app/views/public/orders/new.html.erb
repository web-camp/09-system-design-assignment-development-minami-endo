<h1>Public::Orders#new</h1>
<p>Find me in app/views/public/orders/new.html.erb</p>

<h1>注文情報入力</h1>


<%= form_with model: @order, url: public_orders_comfirm_path, method: :get, local: true do |f| %>

  <h3>支払方法</h3><br>
    <%= f.radio_button :method_of_payment, :クレジットカード, checked: "checked" %>
      <%= f.label :クレジットカード %><br>
    <%= f.radio_button :method_of_payment, :銀行振込 %>
      <%= f.label :銀行振込 %><br>


  <h3>お届け先</h3><br>
    <%= f.radio_button :select_address, :ご自身の住所, checked: "checked" %>
      <%= f.label :ご自身の住所 %><br>

    <%= f.radio_button :select_address, :登録済住所から選択 %>
      <%= f.label :登録済住所から選択 %><br>
      <%= f.collection_select :shipping_address_id, ShippingAddress.all, :id, :address_info %><br>

    <%= f.radio_button :select_address, :新しいお届け先 %>
      <%= f.label :新しいお届け先 %><br>
      <span>郵便番号（ハイフンなし）</span>
        <%= f.text_field :postal_code %><br>
      <span>住所</span>
        <%= f.text_field :address %><br>
      <span>宛名</span>
        <%= f.text_field :name %><br>

<%= f.submit "確認画面へ進む", class:"btn btn-success" %>




<% end %>