<h1>Admins::Genres#index</h1>
<p>Find me in app/views/admins/genres/index.html.erb</p>

<h1>ジャンル一覧・追加</h1>

<%= form_for(@genre, url: admins_genres_path, method: :post) do |f| %>
  <span>ジャンル</span>
  <%= f.text_field :name %>
  <%= f.radio_button :is_active, :effectiveness, checked: "checked" %>
    <%= f.label :有効 %>
  <%= f.radio_button :is_active, :unavailable %>
    <%= f.label :無効 %>
  <%= f.submit "追加", class:"btn btn-primary" %>
<% end %>


<table>
	<tr>
		<th>ジャンル</th>
		<th>状態</th>
	</tr>
  <% @genres.each do |genre| %>
	<tr>
		<td><%= genre.name %></td>
		<td><%= genre.is_active_i18n %></td>
		<td><%= link_to "編集する", edit_admins_genre_path(genre.id), class:"btn btn-primary" %></td>
	</tr>
  <% end %>
</table>