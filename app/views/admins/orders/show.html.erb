<h1>Admins::Orders#show</h1>
<p>Find me in app/views/admins/orders/show.html.erb</p>

<h1>注文履歴詳細</h1>

<p>
	<span>購入者</span>
	<%= link_to @order.name, admins_customer_path(@order) %>
</p>

<p>
	<span>配送先</span>
	<%= @order.postal_code %><%= @order.address %>
	<p>氏名</p>
</p>

<p>
	<span>支払方法</span>
</p>

<p>注文ステータス</p>


<table>
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価（税込）</th>
			<th>数量</th>
			<th>小計</th>
			<th>製作ステータス</th>
		</tr>
	</thead>
	<tbody>
		<%= @orders.each do |order| %>
		<tr>
			<td><%= @order.name %></td>
			<td>単価</td>
			<td>数量</td>
			<td>小計</td>
			<td>製作ステータス</td>
            <td>更新ボタン</td>
		</tr>
		<% end %>
	</tbody>
</table>


